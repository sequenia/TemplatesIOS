# https://realm.github.io/SwiftLint/index.html
# https://gitlab.com/homeworke/13/-/blob/master/.swiftlint.yml

# MARK: - Excluded files
excluded:
    - Pods
    - Cartography
    - build
    - Sources/R.generated.swift
    - Resources/R.generated.swift
    - Project.swift
    - Derived
    - Setup.swift
    - Workspace.swift
    - Tuist

# MARK: - Disabled rules
disabled_rules:
    - cyclomatic_complexity
    - missing_docs
    - nesting
    - trailing_whitespace
    - large_tuple
    - redundant_string_enum_value
    - enum_case_associated_values_count
    - todo

# MARK: - Enabled rules
opt_in_rules:
    - attributes
    - closure_end_indentation
    - closure_spacing
    - collection_alignment
    - empty_collection_literal
    - empty_string
    - enum_case_associated_values_count
    - expiring_todo
    - explicit_init
    - explicit_self
    - fatal_error_message
    - file_name_no_space
    - type_contents_order
    - force_unwrapping
    - joined_default_parameter
    - legacy_random
    - literal_expression_end_indentation
    - modifier_order
    - multiline_arguments
    - multiline_function_chains
    - multiline_literal_brackets
    - multiline_parameters
    - nimble_operator
    - number_separator
    - object_literal
    - overridden_super_call
    - prefixed_toplevel_constant
    - redundant_nil_coalescing
    - sorted_first_last
    - unused_declaration
    - vertical_parameter_alignment_on_call
    - vertical_whitespace_between_cases
    - yoda_condition

# MARK: - Define file header stile
file_header:
  required_pattern: |
                    \/\/
                    \/\/  .*?\.swift
                    \/\/  <Project Name>
                    \/\/
                    \/\/  Created by .*? on \d{1,2}\/\d{1,2}\/\d{2}\.
                    \/\/  Copyright © \d{4} <Author Name>\. All rights reserved\.
                    \/\/

# MARK: - Parametrizing rules
line_length: 190

number_separator:
    minimum_length: 5

identifier_name:
    allowed_symbols: '_'
    max_length:
      warning: 50
      error: 60
    min_length:
      error: 3
    excluded:
      - id
      - to
      - at
      - kf
      - ok
      - no
      - sq

force_unwrapping: error

function_parameter_count:
    warning: 10
    error: 20

function_body_length:
    warning: 300
    error: 400
    
file_length:
    warning: 600
    
warning_threshold: 20

# MARK: - Reporter
reporter: 'xcode'

# MARK: - Custom Rules
custom_rules:

# MARK: - Delegate
    delegate:
        name: "Strong delegate"
        regex: '(?<!weak\s)var\s\w*(D|d)elegate\w*:'
        message: "Please use `weak` for `delegate`. "
        severity: error

# MARK: - Resources
    image_name_initialization:
        included: '.*.swift'
        name: 'Image initialization'
        regex: 'UIImage\(named:[^)]+\)'
        message: 'Use R.image.name() or typealias of this instead'
        severity: error

    cyrillic_strings:
        name: "Cyrillic strings"
        regex: '[а-яА-Я]+'
        message: "Localize and use R.strings of this instead"
        severity: warning
        match_kinds: string

# MARK: - Naming
    get_prefixed_function:
        name: 'Get prefixed function'
        regex: '(?-smxi)(func get[\w]+?(\())'
        message: 'You should not prefix your functions with the word get.'
        severity: warning

# MARK: - Empty line rules
    empty_line_before_closing_brace:
        name: 'Empty Line before closing brace'
        regex: '(^[ a-zA-Z ]*(?:protocol|extension|class|struct) (?!(?:var|let))[ a-zA-Z:]*\{\n *\S+)'
        message: 'There should be an empty line after a declaration'
        severity: warning

    empty_first_line:
        name: 'Empty First Line'
        regex: '(^[ a-zA-Z ]*(?:protocol|extension|class|struct) (?!(?:var|let))[ a-zA-Z:]*\{\n *\S+)'
        message: 'There should be an empty line after a declaration'
        severity: warning

    empty_line_after_guard:
        name: 'Empty Line After Guard'
        regex: '(^ *guard[ a-zA-Z0-9=?.\(\),><!]*\{[ a-zA-Z0-9=?.\(\),><!]*\}\n *(?!(?:return|guard))\S+)'
        message: 'There should be an empty line after a guard'
        severity: error

    empty_line_after_super:
        name: 'Empty Line After Super'
        regex: '^ *super\.([a-zA-Z0-9]*)\([ a-zA-Z0-9=?.\{\}:,><!\n]*\)\n *(?!(?:\}|return))\S+'
        message: 'There should be an empty line after super'
        severity: error

#    missing_empty_line:
#        name: 'Missing Empty Line'
#        regex: '(?-smxi)(\}\n)([ \t]*?)([^\n\}\t ])'
#        message: 'Missing empty line.'
#        severity: warning

# MARK: - IB Rules
    private_outlet:
        name: "Opened IBOutlet"
        regex: '@IBOutlet(\s(public|open))?(\sweak)?\s(var|let)'
        message: "Please use some of `private` or `internal` modifiers."
        severity: error

    open_ibaction:
        name: 'Opened IBAction'
        regex: '@IBAction(\s(public|open))?\sfunc'
        message: 'Please use some of `private` or `internal` modifiers.'
        severity: error

# MARK: - Closures
    unnecessary_leading_void_in:
        name: 'Unnecessary -> Void in at the end of the line'
        regex: '(-> (Void|\(\)) in$)'
        message: 'Unnecessary "-> Void in" at the end of the line. Use only "in"'
        severity: warning

    empty_closure_params:
        name: 'Empty closure params'
        regex: '\{ (\(\) -> Void in)$'
        message: '`() -> Void in` should be avoided'
        severity: warning

# MARK: - Type
    unnecessary_datatype:
        name: 'Unnecessary Datatype'
        regex: '(?m-s)(let|var).*(:\s\[+(\w|:| |\t)+\]+\s*=\s*\[:*\])'
        message: 'Unnecessary datatype. Use "= [DataType]()" instead of ": [DataType] = []"'
        severity: warning

    unnecessary_type:
        name: 'Unnecessary Type'
        regex: '[ a-zA-Z0-9]*(?:let|var) [ a-zA-Z0-9]*: ([a-zA-Z0-9]*)[\? ]*= \1'
        message: 'Type Definition Not Needed'
        severity: error

# MARK: - Spacing
    unnecessary_space:
        name: 'Unnecessary Space'
        regex: '(\[[a-zA-Z]+? {1}: {1}[a-zA-Z]+?\])'
        message: 'Unnecessary space. use [DataType: DataType].'
        severity: warning

    missing_space:
        name: 'Missing Space'
        regex: '(\[[a-zA-Z]+?:[a-zA-Z]+?\])'
        message: 'Missing space. use [DataType: DataType].'
        severity: warning

    double_space:
        include: '*.swift'
        name: 'Double space'
        regex: '([a-z,A-Z] \s+)'
        message: 'Double space between keywords'
        match_kinds: keyword
        severity: warning

    extra_whitespace:
        name: 'Extra whitespaces'
        regex: '([a-zA-Z0-9=?.\(\),><!"\"][ ]{2,}[a-zA-Z0-9?.\(\),><!"\"])'
        message: 'Remove extra whitespaces'
        severity: warning

# MARK: - Comments
    comments_space:
        name: 'Space After Comment'
        regex: '(^ *//\w+)'
        message: 'There should be a space after //'
        severity: warning

    comments_capitalized_ignore_possible_code:
        name: 'Capitalize First Word In Comment'
        regex: '(\s??// +(?!swiftlint)[a-z]+)'
        message: 'The first word of a comment should be capitalized'
        severity: warning

    invalid_mark_format:
        name: 'Invalid MARK Format'
        regex: '(?m-s)(\/\/[\s]*?MARK(?!(\:[\s]{1}\-[\s]{1}){1}))'
        message: 'Use format: MARK: - Your Info'
        severity: warning

    invalid_todo_format:
        name: 'Invalid TODO/FIXME Format'
        regex: '(?m-s)(\/\/ *?(TODO|FIXME)(?!(\: {1})))'
        message: 'Use format: // TODO: Your Note'
        severity: warning

    empty_commented_line:
        name: 'Empty Commented Out Line'
        regex: '(\t+| +)//\n'
        message: 'Remove useless comment lines or use /* format */'
        severity: warning
